""*********************** basic Option *************************************

set runtimepath=~/.vimperator/library,~/.vimperator 

"" set gui=nobookmarks
set hlsearch
set visualbell
set wildmode=full
set focuscontent
set complete=sl

""**************************** Key mappings ********************************

nnoremap j 3j
nnoremap k 3k

map h <A-Left>
map l <A-Right>

map H gT
map L gt

""************************* Plugin Option *******************************

let g:direct_sbm_use_services_by_tag='h'
let g:direct_sbm_use_services_by_post='h'
map s :sbm<Space>[

map v :viewSBMComments -format id,tags,comment -type h<CR> 
map V :viewSBMComments -format id,tags,comment,timestamp -type h<CR> 

map ,a :mr<Space>alc<Space>
map ,g :mr<Space>goo<Space>

echo "vimperator: Welcom back."

