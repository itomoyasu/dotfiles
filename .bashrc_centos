# PATH for virtualenvwrapper
export WORKON_HOME=$HOME/.virtualenvs
source `which virtualenvwrapper.sh`

# Display --------------

PS1='[\h]\w $ '

HISTSIZE=5000

IGNOREEOF=10

HISTCONTROL=ignoreboth
HISTFILE=$HOME/.bash_history

HISTFILESIZE=50000

# Aliases --------------
alias cp='cp -iv'
alias rm='rm -iv'
alias mv='mv -iv'

alias make='make -j2'

alias la='ls -a'
alias ll='ls -lag'

